---
import "/src/styles/global.css";
import Header from "../components/Header.astro";
import MyFooter from "../components/MyFooter.astro";

const {metaDescription,title
}=Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width"/>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css"
    />
    
    <meta name="description" content={metaDescription}>
    <link rel="sitemap" href="/sitemap-index.xml" />
    <meta name="generator" content={Astro.generator} />
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-D8HK0WSG4V"></script>
  <script>
    window.dataLayer = window.dataLayer || [];
    function gtag(){dataLayer.push(arguments);}
    gtag('js', new Date());
  
    gtag('config', 'G-D8HK0WSG4V');
  </script>
    <title>{title}</title>
  </head>
  <body
   class="bg-[#faf9f5] w-full flex flex-col min-h-screen ">
    <Header />
    <div>
      <div class="">
        <slot />
      </div>
    </div>
    <MyFooter/>
  </body>
  <script src="../../node_modules/flowbite/dist/flowbite.min.js"></script>
  
</html>

