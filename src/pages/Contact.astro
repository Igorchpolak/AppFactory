---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="min-h-[calc(100vh-6rem)] flex flex-col justify-center">
    <div
      class="w-[95%]  mx-auto max-w-270 flex justify-center rounded-4xl flex-col my-8 bg-[#416745] shadow-2xl text-[#e6e5d8] p-20 gap-15"
    >
      <div>
        <h1 class="text-5xl font-[bungee] font-normal">Contact Us</h1>
        <p class="text text-4xl my-4">
          If you have any questions or need assistance, please use the contact
          details below:
        </p>
      </div>
      <div>
        <h2 class="text-3xl font-[bungee] font-normal">Company Information:</h2>
        <p class="my-1">
          <span class="bold">Company Name:</span> [Your Company Name]
        </p>
        <p class="my-1">
          <span class="bold">Address:</span> 123 Main Street, Suite 400, City, Country,
          ZIP
        </p>
        <p class="my-1"><span class="bold">Phone:</span> +1 (123) 456-7890</p>
        <p class="my-1">
          <span class="bold">Email:</span> contact@yourcompany.com
        </p>
        <p class="my-1">
          <span class="bold">Business Hours:</span> Monday - Friday, 9 AM - 5 PM
        </p>
      </div>
    </div>
  </div>
</Layout>
<style>
  h2 {
    font-size: 2rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
  }
</style>
