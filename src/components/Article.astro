---
const {
  slug = "test",
  photoUrl = "test",
  title = "test",
  content = "test",
} = Astro.props;

function shortText(inputText: string, maxLength: number) {
  return `${inputText.substring(0, maxLength)}...`;
}
---

<div
  class="w-96 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700"
>
  <a href="#">
    <img
      class="aspect-3/2 object-cover ... rounded-t-lg w-full"
      src={photoUrl}
      alt=""
    />
  </a>
  <div class="p-5">
    <a href="#">
      <h5
        class="h-16 mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white shortText"
      >
        {title}
      </h5>
    </a>
    <p
      class="mb-3 font-normal text-gray-700 dark:text-gray-400 shortText"
      set:html={content.replace(/<[^>]*>/g, "")}
    />
    <a
      href={`/${slug}/`}
      class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
    >
      Read more
      <svg
        class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"></path>
      </svg>
    </a>
  </div>
</div>

<style>
  .shortText {
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2; /* number of lines to show */
    line-clamp: 2;
    -webkit-box-orient: vertical;
  }
</style>
