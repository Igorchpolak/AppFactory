---
import { Image, Picture } from "astro:assets";

const {
  slug = "test",
  photoUrl = "/placeholder.webp",
  title = "test",
  content = "test",
} = Astro.props;


---
<!-- <head>
  <link rel="preload" as="image" href={photoUrl} />
</head> -->

<article
  class="w-100 max-sm:w-[80%] max-md:w-110 max-lg:w-82 bg-[#354eaf] text-[#fffffd] border-gray-200 rounded-lg shadow-2xl"
>
  <Picture
    class="aspect-3/2 object-cover rounded-t-lg w-full"
    src={photoUrl}
    alt={title}
    height="400"
    width="600"
  />
  <div class="p-5">
      <h5
        class="h-16 mb-2 text-2xl font-semiblod font-[roboto] tracking-normal shortText"
      >
        {title}
      </h5>
    <p
      class="mb-3 font-normal text-[#dadace] shortText"
      set:html={content.replace(/<[^>]*>/g, "")}
    />
    <a
      href={`/${slug}/`}
      class="inline-flex items-center font-[bungee] px-3 py-2 text-sm font-light tracking-wider text-center text-[#f1f1e3] rounded-lg bg-[#506ef1e1] hover:bg-[#506ef1a9] duration-50 ease-in"
    >
      READ MORE
      <svg
        class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"></path>
      </svg>
    </a>
  </div>
</article>

