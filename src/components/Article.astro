---
import { Image } from "astro:assets";
import '@fontsource/gugi';
import '@fontsource/roboto';



const {
  slug = "test",
  photoUrl = "test",
  title = "test",
  content = "test",
  currentPage = 1,
} = Astro.props;

function shortText(inputText: string, maxLength: number) {
  return `${inputText.substring(0, maxLength)}...`;
}
---

<article
  class="w-100 max-sm:w-[80%] max-md:w-110 max-lg:w-82 bg-[#354eaf] text-[#fffffd] border-gray-200 rounded-lg shadow-xl"
>
  <a href="#">
    <Image
      loading="lazy"
      class="aspect-3/2 object-cover ... rounded-t-lg w-full"
      src={photoUrl}
      alt={title}
      width="400"
      height="225"
    />
  </a>
  <div class="p-5">
    <a href="#">
      <h5
        class="h-16 mb-2 text-2xl font-normal font-[roboto] tracking-normal shortText"
      >
        {title}
      </h5>
    </a>
    <p
      class="mb-3 font-normal text-[#dadace] shortText"
      set:html={content.replace(/<[^>]*>/g, "")}
    />
    <a
      href={`/${slug}/`}
      class="inline-flex items-center font-[roboto] px-3 py-2 text-sm font-semibold tracking-wide text-center text-[#f1f1e3] rounded-lg bg-[#576bc7e1] hover:bg-[#7684c28c] duration-100 ease-in "
    >
      READ MORE
      <svg
        class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"></path>
      </svg>
    </a>
  </div>
</article>

<style>
  .shortText {
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2; /* number of lines to show */
    line-clamp: 2;
    -webkit-box-orient: vertical;
  }
</style>
