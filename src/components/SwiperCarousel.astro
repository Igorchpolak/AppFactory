---
import BigArticle from "./BigArticle.astro";
import { Navigation, Pagination } from 'swiper/modules';

import { WORDPRESS_REST_API_URL } from "astro:env/client";

const newPosts = await fetch(
  `${WORDPRESS_REST_API_URL}wp-json/wp/v2/posts?_embed`
);
const newPostsJson = await newPosts.json();
---

<main>
  <swiper-container
    class="mySwiper"
    modules={[Navigation, Pagination]}
    pagination="true"
    speed="800"
    pagination-clickable="true"
    centered-slides="true"
    space-between="80"
    slides-per-view="2"
    autoplay-delay="4000"
  >
    {
      newPostsJson.map((post) => (
        <swiper-slide>
          <BigArticle title={post.title.rendered}
            description={post.content.rendered}
            photoUrl={
              post._embedded?.["wp:featuredmedia"]?.[0]?.source_url ||
              "/placeholder.webp"} />
        </swiper-slide>
      ))
    }
  </swiper-container>

  <script
    src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-element-bundle.min.js"
  ></script>
</main>

<style>
  main {
    position: relative;
    height: 100%;
  }

  main {
    /* background: #eee; */
    font-family:
      Helvetica Neue,
      Helvetica,
      Arial,
      sans-serif;
    font-size: 14px;
    color: #000;
    margin: 0;
    padding: 0;
  }

  swiper-container {
    width: 100%;
    height: 100%;
  }

  swiper-slide {
    text-align: center;
    font-size: 18px;
    /* background: #000; */
    display: flex;
    justify-content: center;
    align-items: center;
    transform: scale(1);
    transition: all 0.8s ease;
  }
  .swiper-slide-active {
    transform: scale(1.15);
    transition: all 0.8s ease;
  }
</style>
