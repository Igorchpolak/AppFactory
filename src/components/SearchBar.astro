---
import Search from "astro-pagefind/components/Search";
---

<div class="container mx-auto px-4 h-26 w-[80%] ">
  <div class="searchContainer">
    <Search
      id="search"
      className="pagefind-ui"
      uiOptions={{ showImages: true }}
    />
  </div>
</div>

<style is:global>

  
  .searchContainer {
    z-index: 10;
    position: absolute;
    top: 2.5rem;
    left: 50%;
    transform: translateX(-50%);
    width: 100%;

  }

  /* Tailwind-inspired search bar styling */
  .pagefind-ui {
    --pagefind-ui-scale: 1;
    --pagefind-ui-primary: #4f46e5; /* indigo-600 */
    --pagefind-ui-text: #111827; /* gray-900 */
    --pagefind-ui-background: #fffffff8;
    --pagefind-ui-popup-background: #ffffff;
    --pagefind-ui-border: #e5e7eb; /* gray-200 */
    --pagefind-ui-border-width: 1px;
    --pagefind-ui-border-radius: 0.5rem; /* rounded-lg */
    --pagefind-ui-font: 'ui-sans-serif', system-ui, -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", sans-serif;
    /* background-color: red; */
    height: 3rem;
    width: 100%;
  }

  .pagefind-ui .pagefind-ui__form {
    box-shadow: 0 1px 7px 1px rgba(0, 0, 0, 0.1), 0 1px 2px 0 rgba(0, 0, 0, 0.06); /* shadow-sm */
    border-radius: 0.5rem; /* rounded-lg */
    overflow: hidden;
  }

  .pagefind-ui .pagefind-ui__input {
    padding: 0.75rem 1rem;
    font-size: 0.875rem;
    line-height: 1.25rem;
    color: #374151; /* gray-700 */
    border: 1px solid #e5e7eb; /* gray-200 */
    background-color: #ffffff;
    border-radius: 0.5rem;
    width: 100%;
    height: 3rem;
  }

  .pagefind-ui .pagefind-ui__input:focus {
    outline: none;
    border-color: #4f46e5; /* indigo-600 */
    box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1); /* ring-2 ring-indigo-200 */
  }

  .pagefind-ui .pagefind-ui__button {
    background-color: #4f46e5; /* indigo-600 */
    color: white;
    border-radius: 0.375rem; /* rounded-md */
    padding: 0.5rem 1rem;
    font-weight: 500;
    font-size: 0.875rem;
    transition: background-color 150ms;
  }

  .pagefind-ui .pagefind-ui__button:hover {
    background-color: #4338ca; /* indigo-700 */
  }

  .pagefind-ui .pagefind-ui__drawer {
    color: red;
    padding: 1rem;
    background-color: #fffffff8 !important;
    border: 1px solid #e5e7eb; /* gray-200 */
    border-radius: 0.5rem; /* rounded-lg */
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06); /* shadow-md */
    margin-top: 0.5rem;
  }

  .pagefind-ui .pagefind-ui__message {
    color: #6b7280; /* gray-500 */
    font-size: 0.875rem;
  }

  .pagefind-ui .pagefind-ui__result {
    padding: 1rem 0;
    border-bottom: 1px solid #f3f4f6; /* gray-100 */
  }

  .pagefind-ui .pagefind-ui__result-title {
    font-weight: 600;
    color: #111827; /* gray-900 */
    font-size: 1rem;
    line-height: 1.5rem;
  }

  .pagefind-ui .pagefind-ui__result-excerpt {
    color: #4b5563; /* gray-600 */
    font-size: 0.875rem;
    line-height: 1.5rem;
    margin-top: 0.25rem;
  }
</style>